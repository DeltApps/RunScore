<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.deltapps.runscore.DetailActivity">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISTANCIA TOTAL"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/distancia_total"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/colum_user1"
        android:layout_below="@+id/distancia_total"
        android:layout_alignParentLeft="true">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user1"
            android:text="TÃš"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_user1"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/average_rate_user1"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score_user1"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/colum_vs"
        android:layout_below="@+id/distancia_total"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="30sp"
            android:id="@+id/textView"
            android:textColor="#ffff6752"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/distancia_total"
        android:id="@+id/colum_user2"
        android:layout_alignParentRight="true">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user2"
            android:text="RIVAL"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_user2"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/average_rate_user2"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score_user2"
            android:textSize="30sp"/>
    </LinearLayout>
</RelativeLayout>
